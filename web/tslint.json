{
    "extends": [
        "tslint:recommended",
        "tslint-sonarts",
        "tslint-defocus"
    ],
    "rules": {
        "defocus": true,
        "ban": [
            true,
            [
                "_",
                "extend"
            ],
            [
                "_",
                "isNull"
            ],
            [
                "_",
                "isDefined"
            ]
        ],
        "class-name": true,
        "comment-format": [
            true,
            "check-space"
        ],
        "curly": true,
        "eofline": true,
        "forin": true,
        "indent": [
            true,
            "spaces"
        ],
        "jsdoc-format": true,
        "label-position": true,
        "max-line-length": [
            false,
            140
        ],
        "member-access": false,
        "member-ordering": false,
        "no-arg": true,
        "no-bitwise": true,
        "no-console": [
            true,
            "debug",
            "info",
            "time",
            "timeEnd",
            "trace"
        ],
        "no-construct": true,
        "no-constructor-vars": false,
        "no-debugger": true,
        "no-duplicate-variable": true,
        "no-empty": false,
        "no-eval": true,
        "no-switch-case-fall-through": true,
        "object-literal-sort-keys": false,
        "ordered-imports": false,
        "no-trailing-whitespace": [
            true,
            "ignore-comments"
        ],
        "no-unused-expression": true,
        "no-var-requires": true,
        "one-line": [
            true,
            "check-open-brace",
            "check-catch",
            "check-else",
            "check-whitespace"
        ],
        "radix": true,
        "semicolon": [
            true,
            "always",
            "ignore-bound-class-methods"
        ],
        "triple-equals": [
            true,
            "allow-null-check"
        ],
        "typedef": [
            true,
            "call-signature",
            "parameter",
            "property-declaration"
        ],
        "typedef-whitespace": [
            true,
            {
                "call-signature": "nospace",
                "index-signature": "nospace",
                "parameter": "nospace",
                "property-declaration": "nospace",
                "variable-declaration": "nospace"
            }
        ],
        "use-strict": false,
        "variable-name": false,
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-separator",
            "check-type"
        ],
        "quotemark": [
            true,
            "single",
            "avoid-escape",
            "avoid-template"
        ],
        "trailing-comma": true,
        "max-classes-per-file": false,
        "parameters-max-number": false,
        "arrow-return-shorthand": false,
        "arrow-parens": false,
        "no-big-function": false,
        "align": false,
        "object-literal-key-quotes": false,
        "no-identical-functions": false,
        "no-consecutive-blank-lines": false,
        "object-literal-shorthand": false,
        "one-variable-per-declaration": false,
        "interface-name": false,
        "cognitive-complexity": false,
        "no-duplicate-string": false,
        "no-collapsible-if": false,
        "prefer-immediate-return": false,
        "no-unsafe-finally": false,
        "no-string-literal": false,
        "prefer-for-of": false,
        "no-use-before-declare": false,
        "no-unused-variable": false,
        "no-commented-code": false
    }
}
